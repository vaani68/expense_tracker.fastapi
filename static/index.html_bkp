<!DOCTYPE html>
<html>
<head>
  <title>Expense Tracker</title>
  <style>
    body { font-family: Arial; max-width: 700px; margin: auto; padding: 20px; }
    input, select, button { margin: 5px; padding: 8px; }
    table { border-collapse: collapse; width: 100%; margin-top: 20px; }
    th, td { border: 1px solid #ddd; padding: 8px; }
    th { background-color: #f2f2f2; }
  </style>
</head>
<body>
  <h2>Expense Tracker</h2>

  <form id="expenseForm">
    <input type="number" id="amount" placeholder="Amount" required />
    <input type="text" id="category" placeholder="Category" required />
    <input type="text" id="note" placeholder="Note" />
    <button type="submit">Add Expense</button>
  </form>

  <h3>All Expenses</h3>
  <table id="expensesTable">
    <tr><th>ID</th><th>Amount</th><th>Category</th><th>Note</th></tr>
  </table>

  <h3>Summary</h3>
  <div id="summary"></div>

  <script>
    const api = window.location.origin;

    async function loadExpenses() {
      try {
        const res = await fetch(`${api}/expenses/`);
        const data = await res.json();
        console.log("üì¶ Fetched expenses:", data);

        const table = document.getElementById("expensesTable");
        table.innerHTML = "<tr><th>ID</th><th>Amount</th><th>Category</th><th>Note</th></tr>";
        data.forEach(exp => {
          const row = `<tr><td>${exp.id}</td><td>${exp.amount}</td><td>${exp.category}</td><td>${exp.note || ''}</td></tr>`;
          table.innerHTML += row;
        });
      } catch (err) {
        console.error("‚ùå Error fetching expenses:", err);
      }
    }

    async function loadSummary() {
      try {
        const res = await fetch(`${api}/summary/`);
        const summary = await res.json();
        console.log("üìä Fetched summary:", summary);

        let html = `<strong>Total:</strong> ‚Çπ${summary.total}<br><ul>`;
        for (const cat in summary.by_category) {
          html += `<li>${cat}: ‚Çπ${summary.by_category[cat]}</li>`;
        }
        html += "</ul>";
        document.getElementById("summary").innerHTML = html;
      } catch (err) {
        console.error("‚ùå Error fetching summary:", err);
      }
    }

    document.getElementById("expenseForm").addEventListener("submit", async e => {
      e.preventDefault();
      const amount = document.getElementById("amount").value;
      const category = document.getElementById("category").value;
      const note = document.getElementById("note").value;

      try {
        const res = await fetch(`${api}/expenses/`, {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ amount, category, note })
        });

        const result = await res.json();
        console.log("‚úÖ Submitted:", result);
        alert(result.message);

        document.getElementById("expenseForm").reset();
        loadExpenses();
        loadSummary();
      } catch (err) {
        console.error("‚ùå Error submitting:", err);
        alert("Something went wrong while submitting.");
      }
    });

    loadExpenses();
    loadSummary();
  </script>
</body>
</html>